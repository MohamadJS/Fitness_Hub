                            <form action="/diary/<%= foodDiary.date %>/lunch/<%= food._id %>?_method=DELETE" method="post" class="remove"><button class="btn fa fa-close"></button></form>
                        </div>
                    </div>
                <% } %> 
                <button class="trigger" value="lunch">Add Food</button>
                </div>
            </div>
            <div class="wrapper">
                <div class="diary-item">
                    <h2>Dinner</h2>
                    <% for(food of foodDiary.food.dinner) { %> 
                        <div class="flex">
                            <div class="food">
                                <p class="food-name"><%= food.foodName %></p>
                                <p class="servings"><%= food.servingSize %> (<%= food.amount %> <%= food.amount > 1 ? "servings" : "serving" %>)</p>
                            </div>
                            <div class="food-options">
                                <p class="calories">150</p>
                                <form action="/diary/<%= foodDiary.date %>/dinner/<%= food._id %>"><button class="btn fa fa-edit"></button></form>
                                <form action="/diary/<%= foodDiary.date %>/dinner/<%= food._id %>?_method=DELETE" method="post" class="remove"><button class="btn fa fa-close"></button></form>
                            </div>
                        </div>
                    <% } %> 
                    <button class="trigger" value="dinner">Add Food</button>
                    </div>
                    <div class="diary-item">
                    <h2>Snacks</h2>
                    <% for(food of foodDiary.food.snack) { %> 
                        <div class="flex">
                            <div class="food">
                                <p class="food-name"><%= food.foodName %></p>
                                <p class="servings"><%= food.servingSize %> (<%= food.amount %> <%= food.amount > 1 ? "servings" : "serving" %>)</p>
                            </div>
                            <div class="food-options">
                                <p class="calories">150</p>
                                <form action="/diary/<%= foodDiary.date %>/snack/<%= food._id %>"><button class="btn fa fa-edit"></button></form>
                                <form action="/diary/<%= foodDiary.date %>/snack/<%= food._id %>?_method=DELETE" method="post" class="remove"><button class="btn fa fa-close"></button></form>
                            </div>
                        </div>
                    <% } %> 
                    <button class="trigger" value="snack">Add Food</button>
                    </div>
            </div>
        </div>
    </div>
</div>

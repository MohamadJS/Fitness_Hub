                    </div>
                <% } %> 
                <button class="trigger">Add Food</button>
                    <div class="modal-add">
                        <div class="modal-content-add">
                            <span class="close-button-add">Ã—</span>
                            <h1>Add Food</h1>
                        </div>
                    </div>
                </div>
            </div>
